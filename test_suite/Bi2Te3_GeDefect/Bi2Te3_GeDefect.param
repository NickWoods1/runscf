mixing_scheme pulay
elec_energy_tol 0.0000000001
max_scf_cycles 1000
mix_history_length 30
smearing_width 300
mix_charge_amp 0.8
mix_charge_gmax 1.5
mix_spin_amp 2.0
mix_spin_gmax 1.5
mix_metric_q -1
